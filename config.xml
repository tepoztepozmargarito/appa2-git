<?xml version="1.0" encoding="UTF-8"?>  

<widget xmins = "http://www.w3.org/ns/widgets"
xmlns:gap ="http://phonegap.com/ns/1.0"
id ="com.phonegap.appa2"
version="1.0.0">

<name>appa2-especialidad tecnico en programacion</name>

<description>
Aplicacion que muestra informacion sobre la especialidad de tecnico en progaramacion cbtis
</description>

<author href="https://build.phonegap.com" email="margaritotepoz92@gmail.com">
 margarito tepoz coyotl
</author>

<!--personalisa la aplicacion y plataforma-->
<preference name="orientation"    value="default"/>
<!--<preference name ="orientation"   value="portrait"/>
<preference name="orientation"     value="landscape"/>-->
<preference name="tarjet-device"     value="universal"/>
<preference name="fullscreen"       value="true"/>
<preference name="android-installLocation"  value="auto"/>
<preference name="permissions" value="INTERNET"/>

<!--plugins-->
<plugin name="cordova-plugin-device" spec="~1.1.4"/>
<plugin name="cordova-plugin-vibration" spec="~2.1.3"/>
<plugin name="cordova-plugin-dialogs" spec="~1.3.1"/>

<!--<plugin name="cordova-plugin-geolocation" source="npm"/>-->
<allow-intent href="https://*/*"/>
<acces origin="https://*/*"/>
<allow-intent href="http://*/*"/>
<acces origin="http://*/*"/>
<plugin name="cordova-plugin-whitelist" source="npm"/>

<!--colocar icono app-->
<icon src="res/android/mdpi.png"/>
</widget>